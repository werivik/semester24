{
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15"
  },
  "scripts": {
    "build": "npx tailwindcss -i ./styles.css -o ./output.css --minify",
    "watch": "npx tailwindcss -i ./styles.css -o ./output.css --watch",
    "start": "npx live-server --wait=500",
    "dev": "npm-run-all --parallel start watch"
  }
}
